	<name>RDFIndex CORE Application</name>
	<packaging>jar</packaging>
	<description>RDFIndex CORE Processor</description>
	<properties>
		<org.springframework.version>2.5</org.springframework.version>
		<scala.version>2.8.0</scala.version>
